@charset "utf-8";

/*文章内容页单独css页面*/

#page_main{
	width: 1200px;
	/*height: 100px;*/
	margin: 0 auto;
	overflow: hidden;
	border-bottom: 3px solid orange;
}
/*左侧*/
#page_main .left{
	/*float: left;*/
	margin-right: 300px;
	/*height: 400px;*/
	border: 3px solid blue;
	border-top: none;
	border-left: none;
	/*background: red;*/
	/*overflow: hidden;*/
	padding-bottom: 20px;
}
#page_main .left h1{
	padding-top: 5px;
}
#page_main .left h1 a{
	font-size: 20px;
	color: #2A5E8E;
	line-height: 50px;
}
/*文章信息*/
#page_main .left .article_info_box{
	width: 100%;
	padding-bottom: 15px;
	border-bottom: 1px solid #EEEEEE;
	margin-bottom: 10px;
}
#page_main .left .article_info_box .article_info{
	line-height: 20px;
	height: 20px;
	color: #999;
}
#page_main .left .article_info_box .article_info .padding_right{
	padding-right: 15px;
}
#page_main .left .article_info_box .article_info a{
	color: #0088DB;
}
#page_main .left .article_info_box .article_info a.comment{
	padding-left: 21px;
	background: url(../images/sprite.png) no-repeat -17px -75px;
	/*border: 1px solid blue;*/
}
/*文章信息结束*/
/*文章内容*/
#page_main .left .article_content{
	width: 100%;
	overflow: hidden;
	line-height: 1.5em;
}
#page_main .left .article_content p{
	font-size: 14px;
	line-height: 1.8em;
	margin-bottom: 10px;
}
/*文章内容结束*/
#page_main .left .position{
	width: 100%;
	border-top: 1px solid #EEEEEE;
	line-height: 35px;
	margin-top: 10px;
}
#page_main .left .position a{
	color: #0088DB;
	font-size: 14px;
}
#page_main .left .position a:hover{
	color: #2A5E8E;
}
/*文章标签*/
#page_main .left .tags{
	height: 22px;
	line-height: 22px;
	margin-bottom: 10px;
}
#page_main .left .tags a{
	padding: 2px 8px;
	border: 1px solid #DDDDDD;
	box-shadow: 1px 1px 0 #F6F6F6;
	border-radius: 3px;
	margin: 0 2px;
}
/*文章标签结束*/
/*作者区域*/
#page_main .left .author_info{
	width: 100%;
	height: 75px;
	background: #FBFBFB;
	border: 1px solid #E2E2E2;
	border-left: 4px solid #DDDDDD;
	position: relative;
	margin:20px 0;
}
#page_main .left .author_info img{
	position: absolute;
	top: 16px;
	left: 16px;
	border: 1px solid #CCCCCC;
	box-shadow: 1px 1px 1px #EEEEEE;
}
#page_main .left .author_info .author_name{
	font-weight: 700;
	color: #333;
	position: absolute;
	top: 18px;
	left: 68px;
}
#page_main .left .author_info .author_name a{
	color: #2A5E8E;
	text-decoration: underline;
}
#page_main .left .author_info .description{
	color: #888;
	position: absolute;
	left: 68px;
	top: 40px;
}
#page_main .left p.title{
	height: 28px;
	line-height: 28px;
	border-bottom: 1px solid #E6E6E6;
	font-size: 14px;
	color: #333;
	font-weight: 700;
}
#page_main .left .related_articles{
	width: 100%;
	overflow: hidden;
	padding-top: 15px;
}
#page_main .left .related_articles li{
	width: 146px;
	height: 170px;
	float: left;
	margin-right: 41px;
}
#page_main .left .related_articles li.last{
	margin-right: 0px;
}
#page_main .left .related_articles li .pic{
	display: block;
	padding: 2px;
	border: 1px solid #CCCCCC;
}
#page_main .left .related_articles li .title{
	color: #0088DB;
	line-height: 1.5em;
	padding-top: 5px;
	display: block;
	/*background: red;*/
}
/*作者区域结束*/
